<% include _header %>

<h1>Edit profile</h1>

<% if (flashed) { %>
  <p style="color: red;"><%= flashed %></p>
<% } %>

<form action="/edit-user/<%= user.username %>" method="POST">
  <div class="form-group">
    <input class="form-control" type="text" name="username" value="<%= user.username %>"
      required autofocus>
  </div>
  <div class="form-group">
    <textarea class="form-control" name="bio"><%= user.bio %></textarea>
  </div>
  <div class="form-group">
    <input class="btn btn-primary btn-block" type="submit" value="Save changes">
  </div>
</form>

<% include _footer %>
